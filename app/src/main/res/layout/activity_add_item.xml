<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addItem">


    <EditText
        android:id="@+id/enterItem"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/hour"
        android:ems="10"
        android:hint="Please enter the item name"
        android:inputType="textPersonName|textPostalAddress"
        app:layout_constraintWidth_default="wrap"
         />

    <EditText
        android:id="@+id/hour"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Please enter days of trying"
        android:inputType="number"
         />

    <EditText
        android:id="@+id/price"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Please enter price"
        android:inputType="numberDecimal"
         />


    <Button
        android:id="@+id/butt5"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myButton2"
        android:layout_centerHorizontal="true"
        android:onClick="toList"
        android:text="Save" />

    <Button
        android:id="@+id/butt4"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butt5"
        android:layout_centerHorizontal="true"
        android:text="Back" />
</RelativeLayout>